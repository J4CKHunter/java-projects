<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Button fx:id="buttonMerhaba" text="Merhaba!" GridPane.rowIndex="0" GridPane.columnIndex="0" onAction="#buttonClick"></Button>

    <Button fx:id="buttonHoscakal" text="Hoscakal!" GridPane.rowIndex="0" GridPane.columnIndex="1" onAction="#buttonClick"></Button>

    <TextField fx:id="textFieldAd" promptText="Adinizi giriniz:" GridPane.rowIndex="1" GridPane.columnIndex="0"
               GridPane.columnSpan="2" onKeyReleased="#checkTextField"></TextField>

    <CheckBox fx:id="checkBox" text="tikladiktan sonra alani temizle" GridPane.rowIndex="2" GridPane.columnSpan="2"></CheckBox>

    <Label fx:id="info" text="Bir bilgi verilmedi" GridPane.rowIndex="3" GridPane.columnSpan="2"></Label>
</GridPane>